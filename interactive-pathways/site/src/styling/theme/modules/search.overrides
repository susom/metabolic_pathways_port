/*******************************
         Site Overrides
*******************************/

.ui.search {
  display: flex;
  flex-direction: column;

  .results {
    max-height: 80px;
    overflow: auto;

    @media screen and (min-height: @screen-xs-size) {
      max-height: 30vh;
    }

    @media screen and (min-height: @screen-s-size) {
      max-height: 75vh;
      font-size: 16px;
    }
  }
}
