/*******************************
         Site Overrides
*******************************/

.ui.container {
  width: auto;
  max-height: @toolbar-mobile-height;
  margin: 0 !important;
  overflow-y: auto;

  img {
    display: block;
    margin: 0 auto;
  }

  @media screen and (min-height: @screen-sx-size) {
    max-height: none;
  }
}
